<% if user_signed_in? %>
  <%# for login user %>
  <%= "login as #{current_user.account_name}" %>
  <br>

  <%= link_to new_article_path do %>
    <%= "post your tweet"%>
  <% end %>
  <br>

  <%= link_to destroy_user_session_path, method: "delete" do %>
    <%= "Logout" %>
  <% end %>

<% else %>
  <%# for non login user %>
  <%= "Not login" %>
  <br>

  <%= link_to new_user_session_path do %>
    <%= "Login" %>
  <% end %>
  <br>

  <%= link_to new_user_registration_path do %>
    <%= "Register" %>
  <% end %>
<% end %>

<br>

<%# show tweet %>
<div class="title">
  <% Article.all.each do |article| %>
    <%= "#{article.user.account_name}(#{article.created_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M:%S")})ï¼š" %>
    <%= article.tweet %>
    <br>
  <% end %>
</div>
